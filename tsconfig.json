{
  "compilerOptions": {
    "baseUrl": "./server",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "types": ["node"],
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
